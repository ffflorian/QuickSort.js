{
  "author": "@ffflorian",
  "description": "A TypeScript QuickSort implementation",
  "devDependencies": {
    "@types/jasmine": "3.3.12",
    "husky": "1.3.1",
    "jasmine": "3.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.1"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --config tslint.json --fix",
      "git add"
    ],
    "spec/**/*.ts": [
      "tslint --config tslint.json --project tsconfig.jasmine.json --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "quicksort",
  "private": true,
  "repository": "https://github.com/ffflorian/QuickSort.js.git",
  "scripts": {
    "build": "tsc",
    "clear": "rimraf dist",
    "dist": "yarn clear && yarn build",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:spec": "tslint --project tsconfig.json",
    "prettier": "prettier --ignore-path .gitignore --write \"*.{json,md,ts}\"",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.1.0"
}
